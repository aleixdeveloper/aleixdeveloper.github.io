---
import { info } from "@data";

import Layout from "@layouts/Layout.astro";
import Hero from "@components/home/Hero.astro";
import TopWave from "@components/home/TopWave.astro";
import Experience from "@components/home/Experience.astro";
import MyStack from "@components/stack/MyStack.astro";
import ProjectsWrapper from "@components/general/ProjectsWrapper.astro";
import MetaHead from "@components/general/MetaHead.astro";
import BotWave from "@components/home/BotWave.astro";

const featureProjects = info.projects.map((project, index) => {
  if (project.isFeatured && index < 6) {
    return project;
  }
});
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <MetaHead
      title={"Portfolio"}
      description={info.about}
      ogImageUrl={"/assets/images/profile.png"}
    />
    <style>
      section {
        @apply max-w-[1112px] mx-auto sm:px-4 md:px-10;
      }
    </style>
  </head>

  <body>
    <Layout>
      <Hero name={info.name} about={info.about} />
      <div class="waves z-0 relative min-h-[1000px] w-full flex flex-col">
        <div class="w-full max-h-[340px]">
          <TopWave />
        </div>

        <MyStack stack={info.stack} />
        <div class="w-full max-h-[340px]">
          <BotWave />
        </div>
      </div>
      <div class="experience-section z-20">
        <Experience title={"EXPERIENCE"} details={info.experience} />
        <Experience title={"EDUCATION"} details={info.education} />
        <Experience title={"VOLUNTEERING"} details={info.volunteering} />
        <Experience title={"LANGUAGES"} details={info.languages} />
        <Experience title={"ADD-ONS"} details={info.addOns} />
      </div>
      <section>
        <h2
          class="w-[15rem] ml-3 sm:ml-0 text-2xl sm:text-xl mt-16 text-zinc-600/50 dark:text-zinc-300/50 font-bold border-b sm:border-none"
        >
          FEATURE PROJECTS
        </h2>
        <ProjectsWrapper projects={featureProjects} />
      </section>
    </Layout>
