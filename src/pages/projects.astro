---
import { projects } from "@data"

import ProjectsWrapper from "@components/general/ProjectsWrapper.astro"
import MetaHead from "@components/general/MetaHead.astro"
import Layout from "@layouts/Layout.astro"

const allProjects = projects.map((project) => project)
---

<!doctype html>
<html lang="en">
	<head>
		<MetaHead
			title={"Projects"}
			description={"All projects are available in this page."}
			ogImageUrl={"/assets/images/profile.png"}
		/>
	</head>

	<body>
		<Layout>
			<section>
				<h1 class="my-4 ml-2 sm:ml-0" style="line-height: 1.2;">Projects</h1>
				<ProjectsWrapper projects={allProjects} />
			</section>
		</Layout>
		<style>
			section {
				@apply mx-auto max-w-[1112px] sm:px-4 md:px-6;
			}
		</style>
	</body>
</html>
