---
import Title from "./Title.astro"

const {
	title,
	link,
	id,
} =
	Astro.props
---

<section
	id={id ??
		""}
	class="px-2 py-10 md:px-6">
	<div
		class="flex w-full justify-between">
		<Title
			twColor={title.twColor}
			>{
				title.text
			}</Title
		>
		{
			link && (
				<a
					class="text-xl italic text-gray-500 underline underline-offset-4 dark:text-gray-300"
					href={
						link.to
					}>
					{
						link.label
					}
				</a>
			)
		}
	</div>
	<slot
	/>
</section>
