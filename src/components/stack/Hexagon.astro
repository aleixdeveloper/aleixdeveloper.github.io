---
import { dictionary } from "src/data/stack";
import { Image } from "@astrojs/image/components";

const { element } = Astro.props;
const el = dictionary[element];
---

<div
  class="aspect-square relative w-[5.2em] flex items-center justify-center group hover:scale-105 hover:z-20 opacity-90 hover:opacity-100 transition-all duration-300 ease-in-out"
>
  <span
    class="text-[8em] absolute top-1/2 -translate-y-1/2 left-1/2 -translate-x-1/2"
    style={{
      color: el.color,
    }}
  >
    &#x2B22;
  </span>
  <!--   <img src={el.img} class="absolute w-10/12" /> -->
  <Image
    src={el.img}
    class="absolute w-10/12 top-1/2 -translate-y-6 md:-translate-y-8 lg:-translate-y-9 xl:-translate-y-10 left-1/2 -translate-x-1/2"
    alt="soccer image"
    height={100}
    width={100}
  />
  <p
    class="invisible pointer-events-none bg-slate-900/75 p-1 text-3xl font-sans rounded font-light whitespace-nowrap absolute group-hover:visible text-white -bottom-14"
  >
    {el.name}
  </p>
</div>

