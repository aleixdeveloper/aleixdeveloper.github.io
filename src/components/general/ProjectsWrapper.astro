---
import type { IProjects } from "@/types"
import ProjectCard from "./ProjectCard.astro"

const {
	projects,
} =
	Astro.props as IProjects
---

<div
	class="my-16 grid grid-cols-1 gap-8 md:grid-cols-2 xl:grid-cols-4">
	{
		projects.map(
			(
				project
			) => (
				<ProjectCard
					projectDetail={
						project
					}
				/>
			)
		)
	}
</div>
