---
import { Image } from "astro:assets";

const props = Astro.props as {
  flag: any;
  text: string;
  to?: string;
};

const { text, to } = props;
---

<a
  href={to}
  aria-label={text}
  class="flex w-full items-center justify-around rounded-md hover:font-semibold">
  <Image width={24} height={16} src={props.flag} class="rounded" alt="flag" />

  <span class="hidden sm:block px-1 text-sm text-gray-800 dark:text-gray-100"
    >{text}
  </span>
</a>
