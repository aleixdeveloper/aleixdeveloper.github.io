---
const props =
	Astro.props as {
		flag: any
		name: string
		symbol?: string
	}

const {
	name,
	symbol,
} =
	props
---

<div
	class="inline-flex w-full items-center justify-center gap-x-2 border-2 border-red-400 px-3 py-2 font-semibold"
>
	<div
		class="overflow-hidden rounded"
	>
		{
			(
				<props.flag />
			)
		}
	</div>
	{
		name
	}
	{
		symbol
			? [
					symbol,
				]
			: ""
	}
</div>
