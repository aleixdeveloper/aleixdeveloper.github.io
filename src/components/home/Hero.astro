---
import type { IHeroProps } from "@/types"
import Description from "./Description.astro"
import HeroImage from "./HeroImage.astro"
import { getI18N } from "@/i18n"

const {
	name,
} =
	Astro.props as IHeroProps
const {
	currentLocale,
} =
	Astro
const i18n =
	getI18N(
		{
			currentLocale,
		}
	)
---

<section
	class="relative mt-10 flex w-full flex-col gap-10 text-lg text-stone-600 dark:text-stone-300 sm:text-xl lg:text-2xl">
	<div
		class="flex h-3/5 flex-col items-center xl:flex-row xl:gap-10">
		<div
			class="flex w-full flex-col gap-10 font-extralight md:font-light lg:w-2/3">
			<p
				class="uppercase dark:text-stone-200">
				{
					i18n
						.HERO
						.INTRODUCTION
				}
			</p>

			<h1>
				{
					name
				}
			</h1>
		</div>
		<div
			class="aspect-square h-96 lg:w-1/3">
			<HeroImage
			/>
		</div>
	</div>
	<div
		class="mx-auto flex items-center text-3xl leading-relaxed">
		<Description
		/>
	</div>
</section>

<style
>
	section {
		@apply mx-auto max-w-7xl px-4 md:px-6;
		margin-bottom: 80px;
	}
</style>
