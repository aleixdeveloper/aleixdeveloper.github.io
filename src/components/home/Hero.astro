---
import { IHeroProps } from "@types";
import enduroImg from "../../assets/icons/motocross.png";
import chessImg from "../../assets/icons/chess.png";
import soccerImg from "../../assets/icons/soccer.png";
import { Image, Picture } from "@astrojs/image/components";
const { name, about } = Astro.props as IHeroProps;
---

<section>
  <p class="dark:text-light mt-[117px]">Hello there! I'm</p>

  <h1>{name}</h1>
  <div
    class="dark:text-light text-xl md:text-2xl font-extralight mb-16 leading-10"
  >
    <span
      >A front-end engineer from Barcelona. I am currently learning Astro and
      Typescript, and expanding my knowledge of Nextjs. Out of web development,
      my other passions are
    </span> enduro <Image
      class="inline"
      alt="enduro image"
      src={enduroImg}
      height={30}
      width={30}
    />, football <Image
      src={soccerImg}
      class="inline"
      alt="soccer image"
      height={25}
      width={25}
    />
    and chess <Image
      class="inline"
      alt="chess image"
      src={chessImg}
      height={25}
      width={25}
    />.
  </div>
</section>
