---
import { IHeroProps } from "@types";
import Description from "./Description.astro";
import HeroImage from "./HeroImage.astro";
import Wave from "./Wave.astro";
const { name } = Astro.props as IHeroProps;
---

<section
  class="text-stone-600 flex flex-col mt-10 gap-10 relative w-full dark:text-stone-300 font-extralight text-lg sm:text-2xl lg:text-3xl"
>
  <div class="flex flex-col lg:flex-row lg:gap-10 items-center h-3/5">
    <div class="flex flex-col gap-10 w-full lg:w-2/3">
      <p class="dark:text-stone-200">
        Welcome to my virtual resume! My name is
      </p>

      <h1>{name}</h1>
    </div>
    <div class="w-full lg:w-1/3 flex items-center aspect-square">
      <!-- <img src="/test/silhouette.png" class="" /> -->
      <div class="w-full h-full hero-img">
        <HeroImage />
      </div>
    </div>
  </div>
  <div class="leading-loose mx-auto flex items-center">
    <Description />
  </div>
</section>

<style>
  section {
    @apply max-w-6xl mx-auto px-4 md:px-6;
    height: calc(100vh - 160px);
    margin-bottom: 80px;
  }
  .hero-img {
    transform: scale(-1, 1);
  }
</style>
