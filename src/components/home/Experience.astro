---
import Parallax from "@/components/parallax/Parallax.astro"
import { getI18N } from "@/i18n"
import Section from "../layout/Section.astro"

const {
	title,
	details,
} =
	Astro.props
const {
	currentLocale,
} =
	Astro
const i18n =
	getI18N(
		{
			currentLocale,
		}
	)
---

<Section
	id="experience"
	title={{
		text:
			i18n
				.EXPERIENCE
				.TITLE,
	}}>
	<div
		class="w-full pl-10">
		{
			details.map(
				(
					item
				) => (
					<a
						href={
							item.link
						}
						target="_blank">
						<Parallax direction="left">
							<div class="my-16 text-gray-700 dark:text-gray-200">
								<div class="flex flex-wrap items-center justify-between">
									<h3 class="text-xl font-semibold">
										{
											item.TITLE
										}
									</h3>
									{(item.START_DATE ||
										item.END_DATE) && (
										<p class="dark:text-gray text-base text-gray-100">
											{
												item.START_DATE
											}{" "}
											-{" "}
											{
												item.END_DATE
											}
										</p>
									)}
								</div>
								<p class="mt-3 text-rose-700 dark:text-teal-400">
									{
										item.LOCATION
									}
								</p>
								<ul class="mt-3 text-lg">
									{item.TASKS.map(
										(
											item
										) => (
											<li class="mb-2 text-gray-600 dark:text-gray-200">
												-{" "}
												{
													item
												}
											</li>
										)
									)}
								</ul>
							</div>
						</Parallax>
					</a>
				)
			)
		}
	</div>
</Section>

<style
>
	section {
		@apply mx-auto max-w-[1112px] px-4 md:px-10;
	}
</style>
