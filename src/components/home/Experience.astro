---
import { IExperiences } from "@types";

const { title, details } = Astro.props as IExperiences;
---

<section
  class="flex items-start justify-between flex-col sm:flex-row dark:text-light"
>
  <h2
    class="w-[15rem] text-2xl sm:text-xl mt-16 text-zinc-600/50 dark:text-zinc-300/50 font-bold border-b sm:border-none"
  >
    {title}
  </h2>
  <div class="w-full">
    {
      details.map((item) => (
        <a href={item.link} target="_blank">
          <div class="text-stone-700 dark:text-stone-200 my-16">
            <div class="flex justify-between items-center flex-wrap">
              <h3 class="text-xl font-semibold">{item.name}</h3>
              {(item.startDate || item.endDate) && (
                <p class="text-sm dark:text-gray">
                  {item.startDate} - {item.endDate}
                </p>
              )}
            </div>
            <p class="text-sm mt-3 text-rose-700 dark:text-teal-400">
              {item.location}
            </p>
            <ul class="mt-3">
              {item.description.map((item) => (
                <li class="dark:text-gray">{item}</li>
              ))}
            </ul>
          </div>
        </a>
      ))
    }
  </div>
</section>

<style>
  section {
    @apply max-w-[1112px] mx-auto px-4 md:px-10;
  }
</style>
