---
import Footer from "@/components/general/Footer.astro"
import MetaHead from "@/components/general/MetaHead.astro"
import Navbar from "@/components/general/Navbar.astro"
import { getLangFromUrl } from "../i18n/utils"
import "../styles/style.css"

interface Props {
	description: string
	title: string
}

const {
	description,
	title,
} =
	Astro.props
const lang =
	getLangFromUrl(
		Astro.url
	)
---

<!doctype html>
<html
	lang={lang}>
	<head>
		<MetaHead
			title={"Portfolio"}
			ogImageUrl={"/assets/images/profile.png"}
		/>
		<style
		>
			section {
				@apply mx-auto max-w-[1112px] sm:px-4 md:px-10;
			}
		</style>
	</head>

	<Navbar
	/>
	<main
		class="sm:text-md mx-auto max-w-[1600px] text-sm font-light md:text-lg lg:text-xl xl:text-2xl">
		<slot
		/>
	</main>
	<Footer
	/>


</html>
